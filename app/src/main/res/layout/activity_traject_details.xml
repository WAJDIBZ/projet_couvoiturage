<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Route" />

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and time" />

        <TextView
            android:id="@+id/tv_departure_coords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Departure coords" />

        <TextView
            android:id="@+id/tv_arrival_coords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arrival coords" />

        <TextView
            android:id="@+id/tv_seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seats" />

        <TextView
            android:id="@+id/tv_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Passengers"
            android:paddingTop="12dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tv_passenger_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No passengers yet"
            android:visibility="gone"
            android:padding="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_passengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
